{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/lib",
    "rootDir": "src",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "stripInternal": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/react/**/*", "src/cli/**/*", "docs", "node_modules"]
}
