{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/cli",
    "rootDir": "src/cli",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "strict": true,
    "declaration": false
  },
  "include": ["src/cli/**/*"],
  "exclude": ["node_modules"]
}
